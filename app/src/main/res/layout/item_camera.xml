<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_blank"
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_name"
        android:text="@string/item_name"
        android:textSize="18sp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="9dp"
        android:textColor="#ff000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_blank"
        android:layout_marginStart="9dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_isAlive"
        android:text="@string/item_alive"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="9dp"
        android:textSize="10sp"
        android:textColor="#ff000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        android:layout_marginStart="8dp"
        tools:ignore="SmallSp" />
    <ImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:id="@+id/item_set"
        android:src="@drawable/item_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_blank"
        app:layout_constraintBottom_toTopOf="@id/item_video"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/item_video"
        android:scaleX="1.25"
        android:src="@drawable/page_image"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_isAlive"
        android:layout_marginRight="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>